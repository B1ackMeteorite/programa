/*
#include <stdio.h>
#include <stdlib.h>

char ma(char mi){
    if (mi >= 'a' && mi <= 'z'){
        mi = mi -32;
    }
    

return mi;
}


int main() {
    char x;
    printf("Digite uma letra: ");
    scanf("%c",&x);
    x = ma(x);
    printf("A letra maiuscula e: %c",x);

    return 0;
}
